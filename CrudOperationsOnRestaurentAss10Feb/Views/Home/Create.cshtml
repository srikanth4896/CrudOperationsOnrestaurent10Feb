
@{
    ViewBag.Title = "Create";
}

<h2>New Restaurant Details</h2>

<form action="/Home/Create" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Restaurant Name">Restaurant Name</label>
            <input type="text" name="Rname" class="form-control" id="Rname" placeholder="Restaurent name..." />
        </div>
        <div class="form-group col-md-6">
            <label for="CusineType">CusineType</label>
           
            <select class="form-control" id="CusineType" name="CusineType">
              
                <option value="Indian">Indian</option>
                <option value="Italian">Italian</option>
                <option value="French">French</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
    <a class="btn btn-dark" href="/Home/Index">Cancel</a>
</form>